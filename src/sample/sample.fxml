      </Pane>
      <Pane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <children>
              <Circle fx:id="rightCircle" fill="DODGERBLUE" layoutX="75.0" layoutY="75.0" onMouseClicked="#clickCircle" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
